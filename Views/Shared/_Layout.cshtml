<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - .Net Report Builder</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-editable.css" rel="stylesheet" />
    <style type="text/css">
        body {
            padding-top: 80px;
            padding-bottom: 40px;
        }
        .navbar {
            background-color: #286893;      
            height: 50px;
        }
        .navbar-brand a, .navbar-nav a {
            text-decoration: none;
            color: #fff;
        }
        .navbar-nav a:hover {
            text-decoration: none;
            color: #000;
        }
        
    </style>

</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand" style="padding-top: 5px;">
                    @if (Request.IsLocal) {
                        <a href="/Setup/Index">
                            <img src="~/Content/img/report-icon.png" width="40" />
                            .Net Report Builder
                        </a>
                    }
                    else
                    {
                        <a href="https://dotnetreport.com">
                            <img src="~/Content/img/report-icon.png" width="40" />
                            .Net Report Builder
                        </a>
                    }
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsLocal) { 
                    <li>@Html.ActionLink("About", "Index", "Setup")</li>
                    <li>@Html.ActionLink("Connect", "Connect", "Setup")</li>
                    <li>@Html.ActionLink("Manage", "Manage", "Setup")</li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year .Net Report Builder<br /><a href="https://dotnetreport.com">www.dotnetreport.com</a></p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/Scripts/knockout.mapping-latest.js"></script>
    <script src="~/Scripts/knockout.validation.js"></script>
    <script src="~/Scripts/knockout-sortable.min.js"></script>
    <script src="~/Scripts/bootstrap-editable.min.js"></script>
    <script src="~/Scripts/knockout.x-editable.min.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Scripts/jquery.blockUI.js"></script>
    <script src="~/Scripts/app/extensions/koExenders.js"></script>
    <script src="~/Scripts/app/app.js"></script>
     @RenderSection("scripts", false)
</body>
</html>